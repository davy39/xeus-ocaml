# xeus-ocaml cmake module
# This module sets the following variables in your project::
#
#   xeus-ocaml_FOUND - true if xeus-ocaml was found on the system
#   xeus-ocaml_INCLUDE_DIRS - the directory containing xeus-ocaml headers
#   xeus-ocaml_LIBRARY - the library for dynamic linking
#   xeus-ocaml_STATIC_LIBRARY - the library for static linking

@PACKAGE_INIT@

set(CMAKE_MODULE_PATH "${CMAKE_CURRENT_LIST_DIR};${CMAKE_MODULE_PATH}")

@XEUS_OCAML_CONFIG_CODE@

include(CMakeFindDependencyMacro)
find_dependency(xtl @xtl_REQUIRED_VERSION@)
find_dependency(xeus-zmq @xeus-zmq_REQUIRED_VERSION@)
find_dependency(cppzmq @cppzmq_REQUIRED_VERSION@)


if (NOT TARGET xeus-ocaml AND NOT TARGET xeus-ocaml-static)
    include("${CMAKE_CURRENT_LIST_DIR}/@PROJECT_NAME@Targets.cmake")

    if (TARGET xeus-ocaml AND TARGET xeus-ocaml-static)
        get_target_property(@PROJECT_NAME@_INCLUDE_DIR xeus-ocaml INTERFACE_INCLUDE_DIRECTORIES)
        get_target_property(@PROJECT_NAME@_LIBRARY xeus-ocaml LOCATION)
        get_target_property(@PROJECT_NAME@_STATIC_LIBRARY xeus-ocaml-static LOCATION)
    elseif (TARGET xeus-ocaml)
        get_target_property(@PROJECT_NAME@_INCLUDE_DIR xeus-ocaml INTERFACE_INCLUDE_DIRECTORIES)
        get_target_property(@PROJECT_NAME@_LIBRARY xeus-ocaml LOCATION)
    elseif (TARGET xeus-ocaml-static)
        get_target_property(@PROJECT_NAME@_INCLUDE_DIR xeus-ocaml-static INTERFACE_INCLUDE_DIRECTORIES)
        get_target_property(@PROJECT_NAME@_STATIC_LIBRARY xeus-ocaml-static LOCATION)
        set(@PROJECT_NAME@_LIBRARY ${@PROJECT_NAME@_STATIC_LIBRARY})
    endif ()
endif ()
